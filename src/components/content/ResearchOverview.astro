---
import { Image } from 'astro:assets';
import type { ResearchGroupItem } from '../../types/homepage.js';

export interface Props {
  groups: ResearchGroupItem[];
}

const { groups } = Astro.props;
---

<section class="mb-4" id="research">
  <div class="py-6 sm:py-8 lg:py-10">
    <div class="mb-20 flex w-full flex-col text-center">
      <h2
        class="title-font mb-1 text-xl font-medium tracking-widest text-tklab-primary-600"
      >
        研究内容
      </h2>
      <h1
        class="title-font text-2xl font-medium text-tklab-secondary-900 sm:text-3xl"
      >
        幅広い分野で研究を行っています
      </h1>
    </div>
    <div class="mx-auto max-w-6xl px-4 lg:px-8">
      <div class="grid lg:grid-cols-3">
        {
          groups.map((group) => (
            <a
              href={group.href}
              class="group relative flex h-80 items-end overflow-hidden rounded-lg bg-tklab-secondary-100 p-4 shadow-tklab-md transition-all duration-300 hover:shadow-tklab-lg"
            >
              <Image
                src={group.image.src}
                alt={group.image.alt}
                class="absolute inset-0 h-full w-full object-cover object-center transition duration-200 group-hover:scale-110"
              />

              <div class="pointer-events-none absolute inset-0 bg-gradient-to-t from-tklab-secondary-800 via-transparent to-transparent opacity-50" />

              <div class="relative flex flex-col">
                <span class="text-tklab-secondary-300">
                  {group.groupNumber}
                </span>
                <span class="text-2xl font-semibold text-white lg:text-xl">
                  {group.title}
                </span>
              </div>
            </a>
          ))
        }
      </div>
    </div>
  </div>
</section>
